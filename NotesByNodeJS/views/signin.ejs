<%- include('shared/header.ejs') %>
    <div class="form">
        <div id="login">
            <h1>Welcome Back!</h1>

            <form action="/handleSignin" method="post">
                <div class="field-wrap">
                    <label> Email Address<span class="req">*</span> </label>
                    <input name="email" type="email" required/>
                </div>
                <% if (!isEmail) { %>
                    <div class="alert alert-danger text-center">Email isn't registered!</div>
                <% } %>

                <div class="field-wrap mb-0">
                    <label> Password<span class="req">*</span> </label>
                    <input name="password" type="password" required/>
                </div>
                <% if (!isMatch) { %>
                    <div class="alert alert-danger text-center mb-2">Password is Incorrect!</div>
                <% } %>

                <p class="forgot mt-4"><a href="#">Forgot Password?</a></p>

                <button class="button button-block">Log In</button>
            </form>
        </div>
    </div>


    <%- include('shared/footer.ejs') %>