<%- include ('navbar.ejs') %> 

<div class="container my-5">
  <form action="/handleForm" method="post">
      <input class="form-control" placeholder="enter your name" name="name" type="text" maxlength="35">
      <input class="form-control my-4" placeholder="enter your age" name="age" type="number" maxlength="2">
      <input class="form-control my-4" placeholder="enter your email" name="email" type="email" maxlength="30">
      <input class="form-control my-4" placeholder="enter your password" name="password" type="password" maxlength="15">
      <label for="">Male</label>
      <input value="male" name="gender" type="radio">
      <label for="">FeMale</label>
      <input value="female" name="gender" type="radio">

      <button class="btn btn-danger w-100">Add User</button>
  </form>
</div>

<div class="container">
  <table class="table text-center">
      <tr>
        <th>Index</th>
        <th>Name</th>
        <th>Age</th>
        <th>Email</th>
        <th>Password</th>
        <th>Gender</th>
        <th>Actions</th>
      </tr>

      <% for( let i = 0; i < result.length; i++ ) { %>
        <tr>
          <td> <%= i + 1 %> </td>
          <td> <%= result[i].Name %> </td>
          <td> <%= result[i].Age %> </td>
          <td> <%= result[i].Email %> </td>
          <td> <%= result[i].Password %> </td>
          <td> <%= result[i].Gender %> </td>
          <td>
            <a class="btn btn-primary" href="/editForm/<%= result[i].ID %>">Edit</a>
            <a class="btn btn-danger" href="/delete/<%= result[i].ID %>">Delete</a>
          </td>
        </tr>
      <% } %>
  </table>
</div>

