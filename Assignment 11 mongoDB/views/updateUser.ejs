<%- include ('navbar.ejs') %> 

<div class="container my-5">
  <form action="/updateUser/<%= result._id %>" method="post" class="text-left">
    <label class="font-weight-bold">Full Name</label>
    <input class="form-control" placeholder="Full Name" name="name" type="text" maxlength="20" value="<%= result.name %>">
    <label class="font-weight-bold">Age</label>
    <input class="form-control" placeholder="Age" name="age" type="number" maxlength="2" value="<%= result.age %>">
    <label class="font-weight-bold">Email</label>
    <input class="form-control" placeholder="Email" name="email" type="email" maxlength="20" value="<%= result.email %>">
    <label class="font-weight-bold">Password</label>
    <input class="form-control" placeholder="Password" name="password" type="password" maxlength="20" value="<%= result.password %>">
    <label>Male</label>
    <input value="male" name="sex" type="radio" required>
    <label>Female</label>
    <input value="female" name="sex" type="radio" required>
    
    <button class="btn btn-danger w-100 mt-5">Update User</button>
  </form>
</div>

