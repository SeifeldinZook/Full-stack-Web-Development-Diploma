<%- include ('navbar.ejs') %>

<div class="container-fluid my-5">
  <form class="form-inline justify-content-center my-2 my-lg-0" action="/search" method="POST">
    <input class="form-control mr-sm-2 w-50" type="search" placeholder="Search by title" aria-label="Search"
            name="search" value="<%=searchedWord%>">
    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
  </form>
</div>

<div class="container-fluid">
  <div class="row card-deck mx-0">
    <% for( let i = 0; i < usersDB.length; i++ ) { %>
      <div class="col-md-4 col-sm-12 mb-2 px-0">
        <div class="card">
          <img src="<%= usersDB[i].imgURL %>" class="card-img-top">
          <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
              <li class="nav-item">
                <b class="nav-link active"><%= usersDB[i]._id %></b>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./updateUser/<%= usersDB[i]._id %>">Update</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/delete/<%= usersDB[i]._id %>">Delete</a>
              </li>
            </ul>
          </div>
          <div class="card-body">
            <h5 class="card-title"><b><%= usersDB[i].name %></b></h5>
            <ul>
              <li class="card-text">
                <%= usersDB[i].sex %>
              </li>
              <li class="card-text">
                <%= usersDB[i].age %>
              </li>
              <li class="card-text">
                <%= usersDB[i].email %>
              </li>
            </ul>
          </div>
          <div class="card-footer">
            <small class="text-muted"><%= usersDB[i].updated_at %> </small>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include ('footer.ejs') %>